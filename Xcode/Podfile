use_frameworks!

install! "cocoapods", :share_schemes_for_development_pods => false

pod "Webtrekk", :path => ".."

abstract_target "iOS" do
	platform :ios, "8.0"

	target "Example" do
      target "ModuleTest" do
 		target "TestsOld" do
            target "Tests" do
                inherit! :search_paths
                pod 'Nimble', '~> 7.0.1'
                pod 'OHHTTPStubs', '~> 5.2.1'
                pod 'OHHTTPStubs/Swift', '~> 5.2.1'
                end
            end
		end
    end
end

abstract_target "tvOS" do
    platform :tvos, "9.0"
    
    target "SampleTVApp" do
    target "SampleTVAppTests" do
        inherit! :search_paths
        pod 'Nimble', '~> 7.0.1'
        pod 'OHHTTPStubs', '~> 5.2.1'
        pod 'OHHTTPStubs/Swift', '~> 5.2.1'
        end
    end
end

abstract_target "watchOS" do
    platform :watchos, "2.0"
    
    target "WatchApp" do
        target "WatchApp Extension" do
            inherit! :search_paths
            pod "Webtrekk", :path => ".."
            pod 'OHHTTPStubs', '~> 5.2.1'
            pod 'OHHTTPStubs/Swift', '~> 5.2.1'
        end
    end
end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['SWIFT_VERSION'] = '3.1'
        end
    end
end
